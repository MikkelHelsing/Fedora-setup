{
    "layer": "top",
    "modules-left": ["clock", "idle_inhibitor", "wlr/taskbar", "group/extra"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["mpris", "network", "group/stats", "group/powermanagement", "pulseaudio#input", "pulseaudio#output", "custom/updates", "privacy", "custom/swaync"],
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 16,
        "hide-empty-text": true,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty"
        ]
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "mpris": {
        "interval": 1,
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "dynamic-order": ["artist", "title"],
        "dynamic-len": 50
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "default": "Ó™º",
            "active": "Ó©±"
        },
        "persistent-workspaces": {
            "*": [ 1,2,3,4,5 ]
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "Û∞àà",
            "deactivated": "Û∞àâ"
        },
        "tooltip-format-activated": "Presentation mode enabled",
        "tooltip-format-deactivated": "Presentation mode disabled"
    },
    "pulseaudio#output": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}% Û∞Ç∞",
        "tooltip": false,
        "format-muted": "ÔÄ¶Ôëß",
        "on-click": "python ~/.config/waybar/scripts/audio_changer.py Sinks",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "scroll-step": 5,
        "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
        "ignored-sinks": ["Easy Effects Sink"]
    },
    "pulseaudio#input": {
        "format": "{format_source}",
        "format-source": "Û∞ç¨ {volume}%",
        "tooltip": false,
        "format-source-muted": "Û∞ç≠",
        "on-click": "python ~/.config/waybar/scripts/audio_changer.py Sources",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%+",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%-",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "scroll-step": 5,
        "ignored-sinks": ["Easy Effects Source"]
    },
    "custom/drawer": {
        "format":"ÔÅî",
        "tooltip": false
    },
    "group/extra": {
        "orientation": "inherit",
        "drawer": {
            "transition-left-to-right": true,
            "click-to-reveal": true
        },
        "modules": [
            "custom/drawer", "tray"
        ]
    },
    "network": {
        "format": "",
        "format-wifi": "({signalStrength}%) {icon}",
        "format-ethernet": "Û∞àÄ",
        "format-disconnected": "Û±òñ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "tooltip-format-wifi": "{essid} {ipaddr} ({signalStrength}%) {icon}",
        "tooltip-format-ethernet": "{ipaddr}/{cidr} Û∞àÄ",
        "tooltip-format-disconnected": "Disconnected",
        "format-icons": ["Û∞£æ","Û∞£¥","Û∞£∂","Û∞£∏","Û∞£∫"],
        "max-length": 50
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}",
        "tooltip": true,
        "format-icons": {
          "default": "ÔÉß",
          "performance": "ÔÉß",
          "balanced": "Ôâé",
          "power-saver": "ÔÅ¨"
        }
    },
    "battery": {
        "interval": 10,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "bat-compatibility": true,
        "format": "{capacity}%",
        "format-full": "{capacity}%",
        "format-charging": "ÔÉß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-tooltip": "Empty in {timeTo}\nConsumption: {power}w\nCycles: {cycles}\nHealth: {health}",
        "format-tooltip-charging": "Full in {timeTo}\nConsumption: {power}w\nCycles: {cycles}\nHealth: {health}",
        "format-tooltip-plugged": "Consumption: {power}w\nCycles: {cycles}\nHealth: {health}"
    },
    "group/powermanagement": {
		"orientation": "inherit",
			"modules": [
				"power-profiles-daemon",
				"battery"
			]
	},
	"cpu": {
        "interval": 10,
        "format": "Ôãõ {usage}%",
        "states": {
            "warning": 75,
            "critical": 90
        }
    },
    "temperature": {
        "interval": 10,
        "hwmon-path": "/sys/devices/platform/PNP0C14:02/wmi_bus/wmi_bus-PNP0C14:02/466747A0-70EC-11DE-8A39-0800200C9A66/hwmon/hwmon5/temp1_input",
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C"
    },
    "memory": {
        "interval": 10,
        "format": "ÔáÄ {used:0.1f}GB",
        "tooltip-format": "ÔáÄ {percentage}%, {used}/{total}GB",
        "states": {
            "warning": 75,
            "critical": 90
        }
    },
    "disk": {
        "interval": 300,
        "tooltip-format": "Û∞ãä {specific_used:0.1f}/{specific_total:0.1f}GB",
        "format": "Û∞ãä {percentage_used}%",
        "unit": "GB"
    },
    "group/stats": {
        "orientation": "inherit",
        "drawer": {
            "transition-left-to-right": false,
            "click-to-reveal": true
        },
		"modules": [
            "cpu",
            "temperature",
            "memory",
            "disk"
		]
	},
    "custom/updates": {
        "exec": "bash $HOME/.config/waybar/scripts/checkupdates.sh",
        "on-click-left": "bash $HOME/.config/waybar/scripts/checkupdates.sh",
        "on-click-right": "foot sudo dnf update",
        "interval": 600,
        "hide-empty-text": true,
        "return-type": "json",
        "format": "{} {icon}",
        "format-alt": "{icon} {}",
        "format-icons": {
            "has-updates": "Ôã±",
            "updated": ""
        }
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ]
    },
    "clock": {
        "format-alt": "{:%A, %d. %b  %H:%M}",
        "tooltip-format": "<tt>{calendar}</tt>"
    },
    "custom/swaync": {
        "tooltip": true,
        "tooltip-format": "Left Click: Launch Notification Center\nRight Click: Do not Disturb",
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "sleep 0.1 && swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
}